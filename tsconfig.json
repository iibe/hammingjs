{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "lib": ["es6"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/dist": ["./dist"],
      "~/test": ["./test"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
